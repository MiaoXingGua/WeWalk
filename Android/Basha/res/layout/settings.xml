<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/actionbar_layout" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/addcity_layout"
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="7dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="添加默认城市"
                    android:textSize="17sp" />

                <ImageButton
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="#00000000"
                    android:src="@drawable/add_btn" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#111" />

            <ListView
                android:id="@+id/city_listview"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/readset_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="3dp"
                android:paddingTop="15dp"
                android:text="阅读设置"
                android:textSize="17sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#111" />

            <LinearLayout
                android:id="@+id/clearcahch_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="24dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="#00000000"
                    android:src="@drawable/setting_clearcache" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="清除缓存"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="23.8M"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/otherset_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="3dp"
                android:text="其他设置"
                android:textSize="17sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#111" />

            <LinearLayout
                android:id="@+id/comment_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="6dp" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="#00000000"
                    android:src="@drawable/setting_comment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="意见反馈"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mark_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="6dp" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="#00000000"
                    android:src="@drawable/setting_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="给我评分"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="6dp" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="#00000000"
                    android:src="@drawable/setting_aboutus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="关于我们"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="6dp" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="#00000000"
                    android:src="@drawable/setting_comment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="注销"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>