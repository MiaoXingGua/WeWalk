<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.8" >

        <ImageView
            android:id="@+id/model_imageview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mainpage_model_h"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/empty_photo" />

        <TextView
            android:id="@+id/textview_demonstrate"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/mainpage_modelpage_margin_left"
            android:layout_marginTop="@dimen/mainpage_modelpage_margin_top"
            android:gravity="center"
            android:text="示范"
            android:textSize="18sp" />

        <View
            android:id="@+id/view"
            android:layout_width="1.5dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/mainpage_modelpage_margin_top"
            android:layout_toRightOf="@id/textview_demonstrate"
            android:background="#111" />

        <TextView
            android:id="@+id/textview_streetshot"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/mainpage_modelpage_margin_top"
            android:layout_toRightOf="@id/view"
            android:gravity="center"
            android:text="街拍"
            android:textColor="#c7c7c7"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textview_brand"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/textview_demonstrate"
            android:layout_below="@id/textview_demonstrate"
            android:gravity="center"
            android:text=""
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textview_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/mainpage_model_margin_right"
            android:text="" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mainpage_modelpage_margin_top"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cityname_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" "
                android:textSize="20sp" />

            <ImageView
                android:layout_width="@dimen/mainpage_wetherico_w"
                android:layout_height="@dimen/mainpage_wetherico_w"
                android:layout_marginLeft="7dp"
                android:background="#00000000"
                android:src="@drawable/main_viewpage_wether_icon1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/wether0_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:text="--"
                android:textSize="40sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:background="#eeeeee" />

            <TextView
                android:id="@+id/date0_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:text="--/--/--" />

            <TextView
                android:id="@+id/pm_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:text="空气质量指数:--" />

            <TextView
                android:id="@+id/lowhightemp_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:text="温度:--" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:background="#eeeeee" />

            <ImageButton
                android:id="@+id/allsch_imbtn"
                android:layout_width="@dimen/mainpage_schbtn_w"
                android:layout_height="@dimen/mainpage_schbtn_w"
                android:layout_marginTop="8dp"
                android:background="@drawable/mainpage_allshc_btnpic" />

            <TextView
                android:layout_width="@dimen/mainpage_schbtn_w"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="全部日程 " />

            <ImageButton
                android:id="@+id/addsch_imbtn"
                android:layout_width="@dimen/mainpage_schbtn_w"
                android:layout_height="@dimen/mainpage_schbtn_w"
                android:layout_marginTop="8dp"
                android:background="@drawable/mainpage_addsch_btn_pic" />

            <TextView
                android:layout_width="@dimen/mainpage_schbtn_w"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="添加日程 " />

            <ImageView
                android:layout_width="@dimen/mainpage_schbtn_w"
                android:layout_height="@dimen/mainpage_schbtn_w"
                android:layout_marginTop="8dp"
                android:background="@drawable/mainpage_luck_btn_pic" />

            <TextView
                android:layout_width="@dimen/mainpage_schbtn_w"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="职场运势 " />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>