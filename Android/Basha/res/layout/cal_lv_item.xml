<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:paddingRight="15dp" >

    <ImageView
        android:id="@+id/imageview01"
        android:layout_width="3dp"
        android:layout_height="@dimen/allschepage_childe4layout_h"
        android:background="@drawable/line_blue" />

    <ImageView
        android:id="@+id/imageview02"
        android:layout_width="@dimen/allschepage_childe4layout_cell1_h"
        android:layout_height="@dimen/allschepage_childe4layout_cell1_h"
        android:layout_marginLeft="12dp"
        android:background="@drawable/allsche_tyep1_pic" />

    <TextView
        android:id="@+id/content_textview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/allschepage_childe4layout_h"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:text="上海金茂大厦有会议" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/ic_action_next_item" />

</LinearLayout>